    <LangVersion>latest</LangVersion>
  </PropertyGroup>

<ItemGroup>
    <None Include="LICENSE.txt" Pack="true" PackagePath="" />
</ItemGroup>

  <ItemGroup>
    <Compile Remove="Tests\**" />
